<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewBg"
    android:orientation="vertical"
    tools:context="com.pramont.catcines.catcinema.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_coyo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_sides"
            android:layout_marginRight="@dimen/margin_sides"
            android:layout_marginTop="@dimen/margin_top"
            app:cardCornerRadius="@dimen/cornerRadius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_coyoacan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_splash_foreground"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_sides"
                    android:layout_marginRight="@dimen/margin_sides"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title_coyo"
                        android:layout_width="@dimen/widthText"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top"
                        android:hint="@string/hint_title"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_addr_coyo"
                        android:layout_width="@dimen/widthText"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top"
                        android:hint="@string/hint_address"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_map_coyo"
                    android:layout_width="@dimen/square"
                    android:layout_height="@dimen/square"
                    android:layout_gravity="center"

                    android:src="@mipmap/ic_map_layout"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_cineteca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_sides"
            android:layout_marginRight="@dimen/margin_sides"
            android:layout_marginTop="@dimen/margin_top"
            app:cardCornerRadius="@dimen/cornerRadius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_cineteca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_splash_foreground"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_sides"
                    android:layout_marginRight="@dimen/margin_sides"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title_cineteca"
                        android:layout_width="@dimen/widthText"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top"
                        android:hint="@string/hint_title"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_addr_cineteca"
                        android:layout_width="@dimen/widthText"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top"
                        android:hint="@string/hint_address"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_map_cineteca"
                    android:layout_width="@dimen/square"
                    android:layout_height="@dimen/square"
                    android:layout_gravity="center"

                    android:src="@mipmap/ic_map_layout"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_tonala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_top"
            android:layout_marginLeft="@dimen/margin_sides"
            android:layout_marginRight="@dimen/margin_sides"
            android:layout_marginTop="@dimen/margin_top"
            app:cardCornerRadius="@dimen/cornerRadius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_tonala"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_splash_foreground"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_sides"
                    android:layout_marginRight="@dimen/margin_sides"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title_tonala"
                        android:layout_width="@dimen/widthText"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top"
                        android:hint="@string/hint_title"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_addr_tonala"
                        android:layout_width="@dimen/widthText"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top"
                        android:hint="@string/hint_address"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_map_tonala"
                    android:layout_width="@dimen/square"
                    android:layout_height="@dimen/square"
                    android:layout_gravity="center"

                    android:src="@mipmap/ic_map_layout"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>
