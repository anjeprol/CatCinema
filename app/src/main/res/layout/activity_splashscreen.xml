<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_splash"
    android:layout_gravity="center"
    android:id="@+id/lin_lay"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="@dimen/square_splash"
        android:layout_height="@dimen/square_splash"
        android:id="@+id/splash"
        android:background="@mipmap/ic_splash_foreground" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSizeSplash"
        android:textStyle="bold"
        android:text="@string/pramont_apps"/>

</LinearLayout>